{
    "version": "7.3",
    "data_api_version": "3.0",
    "routing_model": {
        "SIGN_IN": [
            "SIGN_UP",
            "FORGOT_PASSWORD"
        ],
        "SIGN_UP": [
            "TERMS_AND_CONDITIONS"
        ],
        "FORGOT_PASSWORD": [],
        "TERMS_AND_CONDITIONS": []
    },
    "screens": [
        {
            "id": "SIGN_IN",
            "title": "EduFiliova Sign In",
            "terminal": true,
            "success": true,
            "data": {},
            "layout": {
                "type": "SingleColumnLayout",
                "children": [
                    {
                        "type": "Form",
                        "name": "sign_in_form",
                        "children": [
                            {
                                "type": "TextBody",
                                "text": "Welcome back to EduFiliova! Sign in to access your courses and learning materials."
                            },
                            {
                                "type": "TextInput",
                                "required": true,
                                "label": "Email or Phone Number",
                                "name": "email",
                                "input-type": "email"
                            },
                            {
                                "type": "TextInput",
                                "required": true,
                                "label": "Password",
                                "name": "password",
                                "input-type": "password"
                            },
                            {
                                "type": "EmbeddedLink",
                                "text": "Don't have an account? Sign up",
                                "on-click-action": {
                                    "name": "navigate",
                                    "next": {
                                        "type": "screen",
                                        "name": "SIGN_UP"
                                    },
                                    "payload": {}
                                }
                            },
                            {
                                "type": "EmbeddedLink",
                                "text": "Forgot password?",
                                "on-click-action": {
                                    "name": "navigate",
                                    "next": {
                                        "type": "screen",
                                        "name": "FORGOT_PASSWORD"
                                    },
                                    "payload": {
                                        "body": "Enter your email address and we'll send you a password reset link. The link will expire after 24 hours."
                                    }
                                }
                            },
                            {
                                "type": "Footer",
                                "label": "Sign In",
                                "on-click-action": {
                                    "name": "data_exchange",
                                    "payload": {
                                        "action": "sign_in",
                                        "email": "${form.email}",
                                        "password": "${form.password}"
                                    }
                                }
                            }
                        ]
                    }
                ]
            }
        },
        {
            "id": "SIGN_UP",
            "title": "Create EduFiliova Account",
            "data": {},
            "layout": {
                "type": "SingleColumnLayout",
                "children": [
                    {
                        "type": "Form",
                        "name": "sign_up_form",
                        "children": [
                            {
                                "type": "TextBody",
                                "text": "Join EduFiliova and start your learning journey today!"
                            },
                            {
                                "type": "TextInput",
                                "required": true,
                                "label": "Full Name",
                                "name": "full_name",
                                "input-type": "text"
                            },
                            {
                                "type": "TextInput",
                                "required": true,
                                "label": "Email Address",
                                "name": "email",
                                "input-type": "email"
                            },
                            {
                                "type": "TextInput",
                                "required": true,
                                "label": "Create Password",
                                "name": "password",
                                "input-type": "password"
                            },
                            {
                                "type": "TextInput",
                                "required": true,
                                "label": "Confirm Password",
                                "name": "confirm_password",
                                "input-type": "password"
                            },
                            {
                                "type": "OptIn",
                                "name": "terms_agreement",
                                "label": "I agree to the Terms and Conditions",
                                "required": true,
                                "on-click-action": {
                                    "name": "navigate",
                                    "next": {
                                        "type": "screen",
                                        "name": "TERMS_AND_CONDITIONS"
                                    },
                                    "payload": {}
                                }
                            },
                            {
                                "type": "OptIn",
                                "name": "marketing_consent",
                                "label": "Send me course updates and special offers"
                            },
                            {
                                "type": "Footer",
                                "label": "Create Account",
                                "on-click-action": {
                                    "name": "data_exchange",
                                    "payload": {
                                        "action": "sign_up",
                                        "full_name": "${form.full_name}",
                                        "email": "${form.email}",
                                        "password": "${form.password}",
                                        "confirm_password": "${form.confirm_password}",
                                        "terms_agreement": "${form.terms_agreement}",
                                        "marketing_consent": "${form.marketing_consent}"
                                    }
                                }
                            }
                        ]
                    }
                ]
            }
        },
        {
            "id": "FORGOT_PASSWORD",
            "title": "Reset Password",
            "terminal": true,
            "success": true,
            "data": {
                "body": {
                    "type": "string",
                    "__example__": "Enter your email address and we'll send you a password reset link. The link will expire after 24 hours."
                }
            },
            "layout": {
                "type": "SingleColumnLayout",
                "children": [
                    {
                        "type": "Form",
                        "name": "forgot_password_form",
                        "children": [
                            {
                                "type": "TextBody",
                                "text": "${data.body}"
                            },
                            {
                                "type": "TextInput",
                                "required": true,
                                "label": "Email Address",
                                "name": "email",
                                "input-type": "email"
                            },
                            {
                                "type": "Footer",
                                "label": "Send Reset Link",
                                "on-click-action": {
                                    "name": "data_exchange",
                                    "payload": {
                                        "action": "forgot_password",
                                        "email": "${form.email}"
                                    }
                                }
                            }
                        ]
                    }
                ]
            }
        },
        {
            "id": "TERMS_AND_CONDITIONS",
            "title": "Terms and Conditions",
            "data": {},
            "layout": {
                "type": "SingleColumnLayout",
                "children": [
                    {
                        "type": "TextHeading",
                        "text": "EduFiliova Terms of Service"
                    },
                    {
                        "type": "TextSubheading",
                        "text": "Account Terms"
                    },
                    {
                        "type": "TextBody",
                        "text": "By creating an EduFiliova account, you agree to provide accurate information and maintain the security of your account credentials. You are responsible for all activities under your account. EduFiliova reserves the right to suspend accounts that violate these terms."
                    },
                    {
                        "type": "TextSubheading",
                        "text": "Course Content"
                    },
                    {
                        "type": "TextBody",
                        "text": "All course materials, videos, and educational content on EduFiliova are protected by copyright. You may access content for personal learning purposes only. Sharing, redistributing, or commercial use of course content is prohibited without written permission."
                    },
                    {
                        "type": "TextSubheading",
                        "text": "Payment and Refunds"
                    },
                    {
                        "type": "TextBody",
                        "text": "Course purchases and subscription fees are processed securely. Refund requests must be submitted within 7 days of purchase. Vouchers and promotional credits are non-refundable and subject to expiration dates."
                    },
                    {
                        "type": "TextSubheading",
                        "text": "Privacy Policy"
                    },
                    {
                        "type": "TextBody",
                        "text": "EduFiliova collects and processes personal data to provide educational services. We protect your information using industry-standard security measures. Your data may be used for course recommendations, communication, and service improvement. You can request data deletion by contacting support."
                    },
                    {
                        "type": "TextSubheading",
                        "text": "Contact Us"
                    },
                    {
                        "type": "TextBody",
                        "text": "For questions about these terms, contact us at support@edufiliova.com or through our in-app help center."
                    }
                ]
            }
        }
    ]
}
